<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <Button
        android:id="@+id/sendButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="送出"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sizeText0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/colorText0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sizeText0"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/size0"
        android:layout_width="67dp"
        android:layout_height="46dp"
        android:layout_marginTop="100dp"
        android:text="尺寸 :"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/sizeText0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/color0"
        android:layout_width="67dp"
        android:layout_height="46dp"
        android:layout_marginTop="62dp"
        android:text="顏色 :"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/colorText0"
        app:layout_constraintTop_toBottomOf="@+id/size0" />

</androidx.constraintlayout.widget.ConstraintLayout>